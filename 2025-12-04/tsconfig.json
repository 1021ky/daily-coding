{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "out",
    "types": ["vitest", "node"]
  },
  "include": ["src", "**/*.test.ts", "**/*.spec.ts"]
}
