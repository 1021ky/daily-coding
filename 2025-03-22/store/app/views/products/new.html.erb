<h1>New product</h1>

<%# _form.html.erbで定義されたものを呼び出す %>
<%= render "form", product: @product %>

<%# form_withを使うことで、CSRFトークンを作成して、モデルに合わせt、submitボタンの名前修正などいい感じにしてくれる %>
<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
